<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:XamarinHive" x:Class="XamarinHive.LoginPage">
	<ContentPage.Content>
		<ScrollView>
			<StackLayout Padding="16" Spacing="8" VerticalOptions="Center">
				<Image Source="xamarin.jpg" />
				<Label Text="XamarinHive" HorizontalOptions="Center" FontSize="30" />
				<BoxView HeightRequest="20" BackgroundColor="Transparent" />
				<local:XEntry x:Name="edtUsername" Placeholder="Username" BackgroundSource="text_box" LeftIconSource="user_icon" />
				<local:XEntry x:Name="edtPassword" Placeholder="Password" IsPassword="true" BackgroundSource="text_box" LeftIconSource="password_icon" />
				<local:XCheckBox x:Name="chkRemember" Text="Remember me" />
				<local:XButton x:Name="btnLogin" BackgroundSource="selector_login" Clicked="btnLogin_Clicked" BackgroundColor="Transparent" />
				<Label x:Name="lblVersion" Text="v0.1" HorizontalOptions="Center" VerticalOptions="EndAndExpand" />
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>